<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="input-group mb-3">
          <%= f.label :username, class: "col-sm-2 col-form-label text-light" %>
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
        </div>

        <div class="input-group mb-3">
          <%= f.label :email, class: "col-sm-2 col-form-label text-light" %><br />
          <%= f.email_field  :description, class: "form-control shadow rounded", placeholder: "Enter an email address" %>
        </div>

        <div class="input-group mb-3">
          <%= f.label :password, class: "col-sm-2 col-form-label text-light" %><br />
          <%= f.password_field  :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
        </div>

        <div class="input-group mb-3 justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-5 text-center">
      <%= link_to '[ Return to articles listing ]', articles_path, class: "text-center text-info" %>
    </div>
  </div>
</div>